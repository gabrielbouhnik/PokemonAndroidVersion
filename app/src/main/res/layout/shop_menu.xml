<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/pokemon_background">

    <TextView
            android:text="POKÉMART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pokémartTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp" android:textAlignment="center"
            android:textColor="#000000" android:textStyle="bold" android:layout_marginTop="8dp"
            android:layout_marginEnd="96dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="415dp"
            android:layout_height="574dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/shopRecyclerView"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintTop_toBottomOf="@+id/pokémartTextView" android:layout_marginTop="40dp"/>
    <TextView
            android:text="10000 AndroCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/coinsShopTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:fontFamily="casual" android:textSize="18sp" android:textAlignment="textEnd"
            android:textColor="#7F7F7F" android:background="@color/white"
            app:layout_constraintStart_toEndOf="@+id/pokémartTextView" android:layout_marginTop="8dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shopMenuBackButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>