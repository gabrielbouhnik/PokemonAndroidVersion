<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/pokemon_background">
    <ImageView
            android:layout_width="188dp"
            android:layout_height="188dp" tools:srcCompat="@color/white" android:id="@+id/itemSpriteView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Potion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemDetailsName"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/itemSpriteView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
            android:textColor="#7F7F7F" android:background="@color/white"/>
    <TextView
            android:text="Heals 20 hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemDetailsDescription"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDetailsName" android:layout_marginTop="32dp"
            android:textSize="24sp" android:textColor="#7F7F7F" android:background="@color/white"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemDetailsBackButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="13dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/itemRecyclerView"/>
</androidx.constraintlayout.widget.ConstraintLayout>