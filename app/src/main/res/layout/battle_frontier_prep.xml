<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="419dp"
            android:clipToPadding="false"
            android:layout_height="662dp"
            android:id="@+id/battleFrontierRecyclerView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/battleFrontierPrepBackButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="548dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.659"/>
    <Button
            android:text="Battle"
            android:layout_width="175dp"
            android:layout_height="54dp" android:id="@+id/startBattleFrontierButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.803" android:backgroundTint="#673AB7"/>
    <TextView
            android:text="Win Streak:"
            android:layout_width="319dp"
            android:layout_height="66dp" android:id="@+id/winStreakTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/battleFrontierRecyclerView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" android:textStyle="bold" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>