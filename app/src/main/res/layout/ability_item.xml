<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Name"
            android:layout_width="200dp"
            android:layout_height="75dp" android:id="@+id/abilitiyNameTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="24sp"/>
    <TextView
            android:text="Abilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/abilityDescrTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintTop_toBottomOf="@+id/abilitiyNameTextView" android:textAlignment="center"
            android:textSize="18sp" android:lineSpacingExtra="8sp" android:maxLines="5" android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>