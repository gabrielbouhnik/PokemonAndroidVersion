<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="234dp"
            android:layout_height="139dp" android:id="@+id/levelNameTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="144dp"
            app:layout_constraintStart_toEndOf="@+id/levelItemImageView" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="30sp" android:textStyle="bold" android:textAlignment="textStart"/>
    <ImageView
            android:layout_width="158dp"
            android:layout_height="135dp" app:srcCompat="@color/white"
            android:id="@+id/levelItemImageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.026"/>
</androidx.constraintlayout.widget.ConstraintLayout>