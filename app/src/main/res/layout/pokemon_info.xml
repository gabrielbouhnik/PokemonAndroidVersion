            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="24dp"
            android:id="@+id/hpProgressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemonSpriteView" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.324"
            android:progressTint="#4CAF50" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="568dp"/>
    <TextView
            android:text="100/100"
            android:layout_width="183dp"
            android:layout_height="21dp" android:id="@+id/hpValueDetailsTextView"
            android:textStyle="bold"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/hpProgressBar"
            android:textAlignment="viewStart" app:layout_constraintStart_toEndOf="@+id/hpDetailsTextView"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pokemonInfoBackButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
