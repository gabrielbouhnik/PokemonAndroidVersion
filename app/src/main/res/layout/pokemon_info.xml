<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:foregroundTint="#F44336"
                                                   android:background="@drawable/pokemon_background">
    <TextView
            android:text="Attack"
            android:layout_width="160dp"
            android:layout_height="50dp" android:id="@+id/attackTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="260dp"
            app:layout_constraintHorizontal_bias="0.061" android:textAlignment="textStart" android:textStyle="bold"
            android:textSize="24sp" android:background="#FFFFFF" android:alpha="0.75"/>
    <TextView
            android:text="HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hpDetailsTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart" android:textStyle="bold"
            android:textSize="24sp" android:background="#FFFFFF" android:alpha="0.75"
            app:layout_constraintTop_toBottomOf="@+id/pokemonSpriteDetailsView" android:layout_marginStart="16dp"/>
    <TextView
            android:text="SpDef"
            android:layout_width="160dp"
            android:layout_height="50dp" android:id="@+id/spDefTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="410dp"
            app:layout_constraintHorizontal_bias="0.061" android:textAlignment="textStart" android:textStyle="bold"
            android:textSize="24sp" android:background="#FFFFFF" android:alpha="0.65"/>
    <TextView
            android:text="Level"
            android:layout_width="220dp"
            android:layout_height="30dp" android:id="@+id/levelDetailsTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="24sp" android:textStyle="bold" android:textAlignment="center" android:background="#FFFFFF"
            android:alpha="0.75"/>
    <TextView
            android:text="name"
            android:layout_width="220dp"
            android:layout_height="32dp" android:id="@+id/nameDetailsTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:textSize="24sp" android:textStyle="bold" android:textAlignment="center" android:background="#FFFFFF"
            android:alpha="0.75" app:layout_constraintTop_toBottomOf="@+id/levelDetailsTextView"/>
    <ImageView
            android:layout_width="129dp"
            android:layout_height="105dp" tools:srcCompat="@color/purple_200" android:id="@+id/pokemonSpriteDetailsView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:background="#FFFFFF"
            android:alpha="0.75"/>
    <TextView
            android:text="Speed"
            android:layout_width="160dp"
            android:layout_height="50dp" android:id="@+id/speedTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="460dp"
            app:layout_constraintHorizontal_bias="0.061" android:textAlignment="textStart" android:textStyle="bold"
            android:textSize="24sp" android:background="#FFFFFF" android:alpha="0.65"/>
    <TextView
            android:text="Defense"
            android:layout_width="160dp"
            android:layout_height="50dp" android:id="@+id/defenseTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="310dp"
            app:layout_constraintHorizontal_bias="0.061" android:textAlignment="textStart" android:textStyle="bold"
            android:textSize="24sp" android:background="#FFFFFF" android:alpha="0.65"/>
    <TextView
            android:text="SpAtk"
            android:layout_width="160dp"
            android:layout_height="50dp" android:id="@+id/spAtkTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="360dp"
            app:layout_constraintHorizontal_bias="0.061" android:textAlignment="textStart" android:textStyle="bold"
            android:textSize="24sp" android:background="#FFFFFF" android:alpha="0.65"/>
    <Button
            android:text="Move1"
            android:layout_width="150dp"
            android:layout_height="40dp" android:id="@+id/move1InfoButton"
            app:layout_constraintTop_toTopOf="@+id/evolveButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textSize="12sp" android:layout_marginTop="48dp"/>
    <Button
            android:text="Move2"
            android:layout_width="150dp"
            android:layout_height="40dp" android:id="@+id/move2InfoButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textSize="12sp"
            android:visibility="gone" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/move1InfoButton"/>
    <Button
            android:text="Move3"
            android:layout_width="150dp"
            android:layout_height="40dp" android:id="@+id/move3InfoButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textSize="12sp"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/move2InfoButton"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="Move4"
            android:layout_width="150dp"
            android:layout_height="40dp" android:id="@+id/move4InfoButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:layout_marginEnd="20dp" android:textSize="12sp"
            android:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/move3InfoButton"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pokemonInfoBackButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
    <Button
            android:text="Use Item"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/useItemButton"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/nameDetailsTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFEB3B"/>
    <Button
            android:text="Evolve"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/evolveButton"
            app:layout_constraintTop_toBottomOf="@+id/healButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#4CAF50" android:visibility="gone" android:layout_marginTop="4dp"/>
    <Button
            android:text="Moves"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/movesButton"
            app:layout_constraintTop_toBottomOf="@+id/useItemButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FF5722" android:layout_marginTop="8dp"/>
    <Button
            android:text="Heal"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/healButton"
            app:layout_constraintTop_toBottomOf="@+id/movesButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E91E63" android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="91dp"
            android:layout_height="22dp" android:id="@+id/statusDetailsTextView"
            app:layout_constraintTop_toBottomOf="@+id/nameDetailsTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp" app:layout_constraintBottom_toTopOf="@+id/useItemButton"
            android:text="POISON" android:textSize="12sp" android:textAlignment="center"  android:background="#FFFFFF" android:alpha="0.75"/>
    <TextView
            android:text="10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ppMove1TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/move1InfoButton"
            android:layout_marginEnd="70dp" android:background="#FFFFFF" android:alpha="0.75"
    />
    <TextView
            android:text="10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ppMove2TextView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/move2InfoButton"
            android:layout_marginEnd="70dp"
            android:visibility="gone" android:background="#FFFFFF" android:alpha="0.75"/>
    <TextView
            android:text="10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ppMove3TextView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/move3InfoButton"
            android:layout_marginEnd="70dp"
            android:visibility="gone" android:background="#FFFFFF" android:alpha="0.75"/>
    <TextView
            android:text="10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ppMove4TextView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/move4InfoButton" android:layout_marginEnd="70dp"
            android:visibility="gone" android:background="#FFFFFF" android:alpha="0.75"/>
    <Button
            android:text="release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/releaseButton"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/speedTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:backgroundTint="#F44336" android:visibility="gone"/>
    <Button
            android:text="Take Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/takeItemButton"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/speedTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:backgroundTint="#004D40" android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/type1TextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hpDetailsTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="#FFFFFF" android:alpha="0.75" android:text="NORMAL"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/type2TextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hpDetailsTextView"
            app:layout_constraintStart_toEndOf="@+id/type1TextView"
            app:layout_constraintBottom_toTopOf="@+id/attackTextView" app:layout_constraintVertical_bias="0.0"
            android:background="#FFFFFF" android:alpha="0.75" android:layout_marginStart="4dp"/>
    <Button
            android:text="Abilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/abilitiesButton"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/type1TextView"
            app:layout_constraintBottom_toTopOf="@+id/attackTextView" android:backgroundTint="#FFC107"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Item:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/heldItemTextView"
            app:layout_constraintStart_toEndOf="@+id/abilitiesButton"
            app:layout_constraintTop_toBottomOf="@+id/type1TextView"
            android:background="#FFFFFF" android:alpha="0.75"
            android:layout_marginStart="32dp" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>