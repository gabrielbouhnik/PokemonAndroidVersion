<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="260dp"
            android:layout_height="260dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/bannerImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.129"/>
    <Button
            android:text="SUMMON"
            android:layout_width="270dp"
            android:layout_height="101dp" android:id="@+id/summonButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.661"
            android:backgroundTint="#F44336" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="250dp"
            android:layout_height="90dp" android:id="@+id/bannerDescriptionTextView"
            app:layout_constraintBottom_toTopOf="@+id/summonButton"
            app:layout_constraintTop_toBottomOf="@+id/bannerImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="18sp" android:textColor="@color/black"/>
    <TextView
            android:text="Cost: 0 AndroCoins"
            android:layout_width="265dp"
            android:layout_height="50dp" android:id="@+id/bannerCostTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summonButton" android:textSize="18sp"
            android:textStyle="bold" android:textAlignment="center" android:textColor="@color/black"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp" android:id="@+id/arrowImageView"
            android:textColor="#F44336" android:textSize="60sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/bannerCostTextView"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>