<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="259dp"
            android:layout_height="73dp" android:id="@+id/adventureDescriptionTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="Face the trainers and wild pokemon that stand in your way" android:textSize="18sp"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/adventureButton"
            android:layout_marginTop="12dp"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="73dp" android:id="@+id/MysteryGiftTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="Use your AndroCoin to get gift like rare items and pokemons" android:textSize="18sp"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/bannersButton"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Adventure"
            android:layout_width="205dp"
            android:layout_height="67dp" android:id="@+id/adventureButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
            android:backgroundTint="#2196F3" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:textColor="#FFFFFF"/>
    <Button
            android:text="My Pokemon"
            android:layout_width="205dp"
            android:layout_height="57dp" android:id="@+id/pokemonsButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="240dp"
            android:backgroundTint="#4CAF50" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="73dp" android:id="@+id/pokemonTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="Look at the characteristics of your pokemon" android:textSize="18sp"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/pokemonsButton"
    />
    <Button
            android:text="INVENTORY"
            android:layout_width="205dp"
            android:layout_height="57dp" android:id="@+id/itemsButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#FFEB3B" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:textColor="#FFFFFF" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.584"/>
    <TextView
            android:layout_width="252dp"
            android:layout_height="47dp" android:id="@+id/itemsTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="Check out your inventory" android:textSize="18sp"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/itemsButton"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.522"/>
    <Button
            android:text="Mystery Gift"
            android:layout_width="205dp"
            android:layout_height="57dp" android:id="@+id/bannersButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="536dp"
            android:backgroundTint="#F44336" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:textColor="#FFFFFF"/>
    <Button
            android:text="Daily Heal"
            android:layout_width="135dp"
            android:layout_height="35dp" android:id="@+id/dailyHealButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722" android:visibility="gone"/>
    <Button
            android:text="Trainer Card"
            android:layout_width="145dp"
            android:layout_height="35dp" android:id="@+id/trainerCardButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp" android:backgroundTint="#3F51B5"/>
    <androidx.constraintlayout.widget.Group
            android:layout_width="16dp"
            android:layout_height="13dp"
            app:constraint_referenced_ids="dailyRewardView,dailyRewardTextView,closeRewardButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone" android:id="@+id/dailyRewardGroup"/>
    <View
            android:layout_width="335dp"
            android:layout_height="213dp" android:id="@+id/dailyRewardView"
            android:backgroundTint="#9C27B0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="#9C27B0" android:translationZ="90dp"/>
    <TextView
            android:text="Daily Reward:"
            android:layout_width="202dp"
            android:layout_height="119dp" android:id="@+id/dailyRewardTextView"
            app:layout_constraintStart_toStartOf="@+id/dailyRewardView" app:layout_constraintEnd_toEndOf="@+id/dailyRewardView"
            app:layout_constraintTop_toTopOf="@+id/dailyRewardView" app:layout_constraintBottom_toTopOf="@+id/itemsTextView"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintVertical_bias="0.197"
            android:textColor="#000000" android:translationZ="90dp" android:textAlignment="center"
            android:textSize="24sp"/>
    <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/closeRewardButton"
            app:layout_constraintEnd_toEndOf="@+id/dailyRewardView" app:layout_constraintStart_toStartOf="@+id/dailyRewardView"
            app:layout_constraintBottom_toBottomOf="@+id/itemsButton"
            app:layout_constraintTop_toBottomOf="@+id/pokemonsButton" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="1.0" android:translationZ="90dp"/>
    <Button
            android:text="Fight the pokemon league"
            android:layout_width="250dp"
            android:layout_height="35dp" android:id="@+id/eliteButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toTopOf="@+id/adventureButton"
            app:layout_constraintVertical_bias="1.0" android:backgroundTint="#009688" android:textSize="10sp"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>