<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="220dp"
            android:layout_height="60dp" android:id="@+id/rewardNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.461" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FF5722" android:backgroundTint="#FFFFFF"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="69dp" android:id="@+id/rewardQuantityTextView"
            app:layout_constraintStart_toEndOf="@+id/rewardNameTextView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:textSize="36sp" android:textStyle="bold" android:textAlignment="viewStart"
            android:textColor="#FF5722"/>
</androidx.constraintlayout.widget.ConstraintLayout>