<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <Button
            android:text="Battle Factory"
            android:layout_width="225dp"
            android:layout_height="57dp" android:id="@+id/battleFactoryButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#616161" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/battleTowerTextView"
    />
    <Button
            android:text="Battle Tower"
            android:layout_width="225dp"
            android:layout_height="57dp" android:id="@+id/battleTowerButton"
            android:backgroundTint="@color/ic_launcher_background" android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/battleFrontierBackButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="548dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.659"/>
    <TextView
            android:text="Choose three of your Pokemon of level 50 or higher and compete against other trainers in a battle mode where all Pokemon are at the same level"
            android:layout_width="376dp"
            android:layout_height="124dp" android:id="@+id/battleTowerTextView"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/battleTowerButton"
            android:textSize="18sp"/>
    <TextView
            android:text="Compete against other trainers in a battle mode where all Pokemon are on the same level with a team of pokemon that does not belong to you."
            android:layout_width="376dp"
            android:layout_height="124dp" android:id="@+id/battleFactoryTextView"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/battleFactoryButton"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.457"/>
</androidx.constraintlayout.widget.ConstraintLayout>